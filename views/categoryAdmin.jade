extends layout

block content
	.container
		.row
			form.form-horizontal(method="post",action="/admin/category")
				.form-group
					label.col-sm-2.control-label(for="inputCategory") 电影分类
					.col-sm-10
						input#inputCategory.form-control(type="text",name='categoryName',value=category.name)
				.form-group
					div.col-sm-offset-2.col-sm-10
						button.btn.btn-success(type="submit") 录入